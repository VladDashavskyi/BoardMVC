@model BoardMVC.Models.Announcement

<h2>Видалити оголошення</h2>

<h4>Ти впевнений, що хочеш видалити це оголошення?</h4>
<dl class="row">
    <dt class="col-sm-2">Назва</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Опис</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>