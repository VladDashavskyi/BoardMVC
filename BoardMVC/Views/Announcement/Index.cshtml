@model IEnumerable<BoardMVC.Models.Announcement>

<h2>Оголошення</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Створити нове</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Категорія</th>
            <th>Підкатегорія</th>
            <th>Статус</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var an in Model)
        {
            <tr>
                <td>@an.Title</td>
                <td>@an.Description</td>
                <td>@an.CategoryName</td>
                <td>@an.SubCategoryName</td>
                <td>@an.Status</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@an.Id">Деталі</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@an.Id">Редагувати</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@an.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
